
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 222.2 84% 4.9%;
    --card: 0 0% 100%;
    --card-foreground: 222.2 84% 4.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 222.2 84% 4.9%;
    --primary: 262 83% 58%;
    --primary-foreground: 210 40% 98%;
    --secondary: 210 40% 96%;
    --secondary-foreground: 222.2 84% 4.9%;
    --muted: 210 40% 96%;
    --muted-foreground: 215.4 16.3% 46.9%;
    --accent: 210 40% 96%;
    --accent-foreground: 222.2 84% 4.9%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;
    --border: 214.3 31.8% 91.4%;
    --input: 214.3 31.8% 91.4%;
    --ring: 262 83% 58%;
    --chart-1: 12 76% 61%;
    --chart-2: 173 58% 39%;
    --chart-3: 197 37% 24%;
    --chart-4: 43 74% 66%;
    --chart-5: 27 87% 67%;
    --radius: 0.5rem;
  }

  .dark {
    --background: 222.2 84% 4.9%;
    --foreground: 210 40% 98%;
    --card: 222.2 84% 4.9%;
    --card-foreground: 210 40% 98%;
    --popover: 222.2 84% 4.9%;
    --popover-foreground: 210 40% 98%;
    --primary: 262 83% 58%;
    --primary-foreground: 210 40% 98%;
    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;
    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;
    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;
    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: 262 83% 58%;
    --chart-1: 220 70% 50%;
    --chart-2: 160 60% 45%;
    --chart-3: 30 80% 55%;
    --chart-4: 280 65% 60%;
    --chart-5: 340 75% 55%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-figma-bg text-foreground;
    font-family: Inter, ui-sans-serif, system-ui;
  }
}

/* Custom styles for Figma design */
.figma-container {
  max-width: 1440px;
  max-height: 939px;
  border-radius: 12.54px;
}

.modal-backdrop {
  background: rgba(17, 17, 17, 0.2);
  backdrop-filter: blur(40px);
}

.program-card {
  background: white;
  border-radius: 16px;
  padding: 28px;
  box-shadow: 
    0px 9px 19px 0px rgba(140, 140, 140, 0.1),
    0px 35px 35px 0px rgba(140, 140, 140, 0.09),
    0px 79px 47px 0px rgba(140, 140, 140, 0.05),
    0px 140px 56px 0px rgba(140, 140, 140, 0.01);
}

.date-picker-modal {
  width: 532px;
  height: 528px;
  border-radius: 12px;
  padding: 24px;
}

.asset-type-web::before {
  content: "üåê";
  margin-right: 8px;
}

.asset-type-mobile::before {
  content: "üì±";
  margin-right: 8px;
}

.status-eligible {
  @apply bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs font-medium;
}

.status-ineligible {
  @apply bg-red-100 text-red-800 px-2 py-1 rounded-full text-xs font-medium;
}